<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<!--
  ╔══════════════════════════════════════════════════════════════════════════╗
  ║  QuestionView2025  –  Fullscreen quiz question with 3 answer choices     ║
  ║  Each choice is a bold glowing card. Timer is a large countdown number   ║
  ╚══════════════════════════════════════════════════════════════════════════╝
-->

<BorderPane
   id="wiss_pane_small"
   maxHeight="1080.0" maxWidth="1920.0"
   minHeight="1080.0" minWidth="1920.0"
   prefHeight="1080.0" prefWidth="1920.0"
   style="-fx-background-color: #0A0E1A;"
   stylesheets="@../application/buzzerStyle2025.css"
   xmlns="http://javafx.com/javafx/24.0.1"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="view.QuestionViewController">

   <!-- ═══════════════════════  TOP – LOGO + QUESTION  ═══════════════════════ -->
   <top>
      <AnchorPane
         prefHeight="320.0"
         style="-fx-background-color: linear-gradient(to bottom, #0D1220, #0A0E1A);">

         <!-- Top neon accent line -->
         <Rectangle
            height="4.0" width="1920.0"
            layoutX="0.0" layoutY="0.0"
            fill="linear-gradient(to right, #7B2FFF, #00C8FF, #7B2FFF)" />

         <!-- Logo + Hashtag -->
         <HBox
            alignment="CENTER_LEFT"
            layoutX="40.0" layoutY="30.0"
            spacing="18.0">
            <ImageView
               fitWidth="90.0"
               pickOnBounds="true"
               preserveRatio="true"
               style="-fx-effect: dropshadow(gaussian, #00C8FF, 12, 0.5, 0, 0);">
               <image>
                  <Image url="@../resources/images/IAE_Logo_S.png" />
               </image>
            </ImageView>
            <Label
               id="lblBildenZukunft"
               text="#IAE_Future_Skills"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 20px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #00C8FF;
                      -fx-opacity: 0.8;" />
         </HBox>

         <!-- Question Number badge (top right) -->
         <Label
            text="FRAGE"
            style="-fx-font-family: 'Courier New';
                   -fx-font-size: 16px;
                   -fx-font-weight: bold;
                   -fx-text-fill: #7B2FFF;
                   -fx-background-color: rgba(123,47,255,0.12);
                   -fx-border-color: rgba(123,47,255,0.4);
                   -fx-border-width: 1.5;
                   -fx-border-radius: 8;
                   -fx-background-radius: 8;
                   -fx-padding: 6 20 6 20;"
            AnchorPane.rightAnchor="50.0"
            AnchorPane.topAnchor="35.0" />

         <!-- ── The Question Label ── -->
         <VBox
            alignment="CENTER"
            AnchorPane.leftAnchor="80.0"
            AnchorPane.rightAnchor="80.0"
            AnchorPane.topAnchor="110.0"
            AnchorPane.bottomAnchor="10.0">

            <!-- Question box with glowing border -->
            <VBox
               alignment="CENTER"
               style="-fx-background-color: rgba(0,50,100,0.35);
                      -fx-border-color: rgba(0,200,255,0.40);
                      -fx-border-width: 2;
                      -fx-border-radius: 18;
                      -fx-background-radius: 18;
                      -fx-effect: dropshadow(gaussian, rgba(0,200,255,0.20), 25, 0, 0, 0);">
               <padding><Insets top="30.0" bottom="30.0" left="50.0" right="50.0" /></padding>
               <Label
                  id="lblFrage"
                  fx:id="lblFrage"
                  alignment="CENTER"
                  text="Lädt Frage..."
                  textAlignment="CENTER"
                  wrapText="true"
                  style="-fx-font-family: 'Courier New';
                         -fx-font-size: 44px;
                         -fx-font-weight: bold;
                         -fx-text-fill: white;
                         -fx-effect: dropshadow(gaussian, rgba(0,200,255,0.3), 10, 0, 0, 0);" />
            </VBox>
         </VBox>

      </AnchorPane>
   </top>

   <!-- ═══════════════════════  CENTER – ANSWER CARDS  ═══════════════════════ -->
   <center>
      <HBox
         alignment="CENTER"
         spacing="40.0"
         style="-fx-background-color: #0A0E1A;"
         BorderPane.alignment="CENTER">
         <padding><Insets bottom="10.0" left="60.0" right="60.0" top="10.0" /></padding>

         <!-- ── Answer A ── -->
         <VBox
            alignment="TOP_CENTER"
            spacing="18.0"
            HBox.hgrow="ALWAYS"
            style="-fx-background-color: linear-gradient(to bottom, rgba(0,180,255,0.12), rgba(0,100,200,0.05));
                   -fx-border-color: rgba(0,180,255,0.50);
                   -fx-border-width: 2.5;
                   -fx-border-radius: 20;
                   -fx-background-radius: 20;
                   -fx-effect: dropshadow(gaussian, rgba(0,180,255,0.25), 25, 0, 0, 0);
                   -fx-cursor: hand;">
            <padding><Insets top="28.0" bottom="28.0" left="24.0" right="24.0" /></padding>

            <Label
               text="A"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 52px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #00C8FF;
                      -fx-background-color: rgba(0,200,255,0.15);
                      -fx-background-radius: 50%;
                      -fx-min-width: 70;
                      -fx-min-height: 70;
                      -fx-alignment: center;
                      -fx-effect: dropshadow(gaussian, #00C8FF, 12, 0.5, 0, 0);" />
            <Label
               fx:id="lblAntwort1"
               styleClass="label_bigger"
               text="Antwort A"
               textAlignment="CENTER"
               wrapText="true"
               style="-fx-font-size: 34px;
                      -fx-text-fill: white;
                      -fx-font-family: 'Courier New';
                      -fx-text-alignment: center;" />
         </VBox>

         <!-- ── Answer B ── (center, purple accent) -->
         <VBox
            alignment="TOP_CENTER"
            spacing="18.0"
            HBox.hgrow="ALWAYS"
            style="-fx-background-color: linear-gradient(to bottom, rgba(123,47,255,0.14), rgba(80,20,160,0.05));
                   -fx-border-color: rgba(123,47,255,0.60);
                   -fx-border-width: 2.5;
                   -fx-border-radius: 20;
                   -fx-background-radius: 20;
                   -fx-effect: dropshadow(gaussian, rgba(123,47,255,0.30), 25, 0, 0, 0);
                   -fx-cursor: hand;">
            <padding><Insets top="28.0" bottom="28.0" left="24.0" right="24.0" /></padding>

            <Label
               text="B"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 52px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #9B5FFF;
                      -fx-background-color: rgba(123,47,255,0.18);
                      -fx-background-radius: 50%;
                      -fx-min-width: 70;
                      -fx-min-height: 70;
                      -fx-alignment: center;
                      -fx-effect: dropshadow(gaussian, #7B2FFF, 12, 0.5, 0, 0);" />
            <Label
               fx:id="lblAntwort2"
               styleClass="label_bigger"
               text="Antwort B"
               textAlignment="CENTER"
               wrapText="true"
               style="-fx-font-size: 34px;
                      -fx-text-fill: white;
                      -fx-font-family: 'Courier New';
                      -fx-text-alignment: center;" />
         </VBox>

         <!-- ── Answer C ── -->
         <VBox
            alignment="TOP_CENTER"
            spacing="18.0"
            HBox.hgrow="ALWAYS"
            style="-fx-background-color: linear-gradient(to bottom, rgba(0,200,120,0.10), rgba(0,120,80,0.04));
                   -fx-border-color: rgba(0,200,120,0.45);
                   -fx-border-width: 2.5;
                   -fx-border-radius: 20;
                   -fx-background-radius: 20;
                   -fx-effect: dropshadow(gaussian, rgba(0,200,120,0.22), 25, 0, 0, 0);
                   -fx-cursor: hand;">
            <padding><Insets top="28.0" bottom="28.0" left="24.0" right="24.0" /></padding>

            <Label
               text="C"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 52px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #00C878;
                      -fx-background-color: rgba(0,200,120,0.15);
                      -fx-background-radius: 50%;
                      -fx-min-width: 70;
                      -fx-min-height: 70;
                      -fx-alignment: center;
                      -fx-effect: dropshadow(gaussian, #00C878, 12, 0.5, 0, 0);" />
            <Label
               fx:id="lblAntwort3"
               styleClass="label_bigger"
               text="Antwort C"
               textAlignment="CENTER"
               wrapText="true"
               style="-fx-font-size: 34px;
                      -fx-text-fill: white;
                      -fx-font-family: 'Courier New';
                      -fx-text-alignment: center;" />
         </VBox>

      </HBox>
   </center>

   <!-- ═══════════════════════  BOTTOM – TIMER  ═══════════════════════ -->
   <bottom>
      <AnchorPane
         prefHeight="160.0"
         style="-fx-background-color: linear-gradient(to top, #080B14, #0A0E1A);">

         <!-- Timer label - giant glowing countdown -->
         <Label
            fx:id="lblZeit"
            alignment="CENTER"
            text="20"
            style="-fx-font-family: 'Courier New';
                   -fx-font-size: 100px;
                   -fx-font-weight: bold;
                   -fx-text-fill: #00C8FF;
                   -fx-effect: dropshadow(gaussian, #00C8FF, 30, 0.7, 0, 0);"
            AnchorPane.bottomAnchor="25.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0">
            <font><Font name="System Bold" size="100.0" /></font>
         </Label>

         <!-- Timer track bar -->
         <Rectangle
            height="6.0" width="1800.0"
            layoutX="60.0" layoutY="8.0"
            fill="linear-gradient(to right, #7B2FFF, #00C8FF)"
            arcWidth="6" arcHeight="6"
            opacity="0.4" />
      </AnchorPane>
   </bottom>

</BorderPane>
