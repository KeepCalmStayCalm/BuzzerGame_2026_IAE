<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<BorderPane
    id="pane"
    prefHeight="800.0" prefWidth="1200.0"
    style="-fx-background-color: #000000;"
    stylesheets="@../application/buzzerStyle2025.css"
    xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="view.QuestionViewController">

    <top>
        <AnchorPane style="-fx-padding: 20 40 10 40;">
            <children>
                <Label fx:id="lblFrage" id="lblFrage" alignment="CENTER" textAlignment="CENTER" wrapText="true"
                    text="Frage wird geladen…" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="160.0" AnchorPane.topAnchor="30.0" />
                <Label fx:id="lblRestzeit" id="lblZeit" text="–" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0" />
            </children>
        </AnchorPane>
    </top>

    <center>
        <GridPane BorderPane.alignment="CENTER" hgap="20" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints fillHeight="false" maxHeight="-Infinity" minHeight="10.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding><Insets bottom="20.0" left="30.0" right="30.0" top="10.0" /></padding>
            <children>
                <Label text="A:" GridPane.halignment="CENTER" styleClass="answer-letter" />
                <Label text="B:" GridPane.columnIndex="1" GridPane.halignment="CENTER" styleClass="answer-letter" />
                <Label text="C:" GridPane.columnIndex="2" GridPane.halignment="CENTER" styleClass="answer-letter" />
                
                <Label fx:id="lblAntwort1" styleClass="answer-label" text="Antwort 1" wrapText="true"
                       GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP" maxWidth="Infinity" maxHeight="Infinity" />
                <Label fx:id="lblAntwort2" styleClass="answer-label" text="Antwort 2" wrapText="true"
                       GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP" maxWidth="Infinity" maxHeight="Infinity" />
                <Label fx:id="lblAntwort3" styleClass="answer-label" text="Antwort 3" wrapText="true"
                       GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP" maxWidth="Infinity" maxHeight="Infinity" />
            </children>
        </GridPane>
    </center>

    <bottom>
        <BorderPane fx:id="imageRoot" prefHeight="300.0" BorderPane.alignment="CENTER">
            <center>
                <ImageView fx:id="image" pickOnBounds="true" preserveRatio="true" />
            </center>
            <padding><Insets bottom="30.0" left="30.0" right="30.0" top="10.0" /></padding>
        </BorderPane>
    </bottom>
</BorderPane>
