<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<!--
  ╔══════════════════════════════════════════════════════════════════════════╗
  ║  QuestionView  –  Compact secondary question view  (1102 × 794)         ║
  ║  Used on secondary display / player screens                              ║
  ╚══════════════════════════════════════════════════════════════════════════╝
-->

<BorderPane
   id="pane"
   prefHeight="794.0"
   prefWidth="1102.0"
   style="-fx-background-color: #0A0E1A;"
   stylesheets="@../application/buzzerStyle2025.css"
   xmlns="http://javafx.com/javafx/8.0.171"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="view.QuestionViewController">

   <!-- ═══════════════════════  TOP – QUESTION  ═══════════════════════ -->
   <top>
      <AnchorPane
         style="-fx-background-color: linear-gradient(to bottom, #0D1220, #0A0E1A);">

         <!-- Top accent bar -->
         <Rectangle
            height="4.0" width="1102.0"
            layoutX="0.0" layoutY="0.0"
            fill="linear-gradient(to right, #7B2FFF, #00C8FF, #7B2FFF)" />

         <!-- Question label with glowing card style -->
         <VBox
            alignment="CENTER"
            style="-fx-background-color: rgba(0,40,80,0.40);
                   -fx-border-color: rgba(0,200,255,0.45);
                   -fx-border-width: 2;
                   -fx-border-radius: 16;
                   -fx-background-radius: 16;
                   -fx-effect: dropshadow(gaussian, rgba(0,200,255,0.25), 20, 0, 0, 0);"
            AnchorPane.leftAnchor="40.0"
            AnchorPane.rightAnchor="40.0"
            AnchorPane.topAnchor="55.0"
            AnchorPane.bottomAnchor="12.0">
            <padding><Insets top="22.0" bottom="22.0" left="32.0" right="32.0" /></padding>
            <Label
               id="lblFrage"
               fx:id="lblFrage"
               alignment="CENTER"
               text="Die Grösse von Computerdaten wird in Byte gemessen, welche 'Bytes' gibt es nicht?"
               wrapText="true"
               textAlignment="CENTER"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 36px;
                      -fx-font-weight: bold;
                      -fx-text-fill: white;
                      -fx-text-alignment: center;" />
         </VBox>

         <!-- Timer top-right badge -->
         <VBox
            alignment="CENTER"
            style="-fx-background-color: rgba(0,200,255,0.10);
                   -fx-border-color: rgba(0,200,255,0.40);
                   -fx-border-width: 2;
                   -fx-border-radius: 12;
                   -fx-background-radius: 12;
                   -fx-effect: dropshadow(gaussian, #00C8FF, 20, 0.5, 0, 0);"
            AnchorPane.rightAnchor="10.0"
            AnchorPane.topAnchor="10.0"
            minWidth="120.0">
            <padding><Insets top="6.0" bottom="6.0" left="10.0" right="10.0" /></padding>
            <Label
               text="⏱ ZEIT"
               style="-fx-font-size: 13px;
                      -fx-text-fill: #00C8FF;
                      -fx-font-family: 'Courier New';" />
            <Label
               id="lblZeit"
               fx:id="lblRestzeit"
               text="20"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 56px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #00C8FF;
                      -fx-effect: dropshadow(gaussian, #00C8FF, 15, 0.7, 0, 0);">
               <font><Font name="System Bold" size="56.0" /></font>
            </Label>
         </VBox>

      </AnchorPane>
   </top>

   <!-- ═══════════════════════  CENTER – ANSWER GRID  ═══════════════════════ -->
   <center>
      <GridPane
         BorderPane.alignment="CENTER"
         hgap="20.0"
         vgap="0.0"
         style="-fx-background-color: #0A0E1A;">
         <padding><Insets left="30.0" right="30.0" top="10.0" bottom="20.0" /></padding>

         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints fillHeight="false" minHeight="60.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>

         <children>

            <!-- ── Header labels row ── -->
            <VBox
               alignment="CENTER"
               style="-fx-background-color: rgba(0,200,255,0.12);
                      -fx-background-radius: 10 10 0 0;
                      -fx-border-color: rgba(0,200,255,0.4) rgba(0,200,255,0.4) transparent rgba(0,200,255,0.4);
                      -fx-border-width: 2;"
               GridPane.halignment="CENTER">
               <padding><Insets top="10.0" bottom="10.0" /></padding>
               <Label
                  text="A"
                  style="-fx-font-family: 'Courier New';
                         -fx-font-size: 44px;
                         -fx-font-weight: bold;
                         -fx-text-fill: #00C8FF;
                         -fx-effect: dropshadow(gaussian, #00C8FF, 10, 0.5, 0, 0);">
                  <font><Font size="44.0" /></font>
               </Label>
               <GridPane.margin><Insets bottom="0.0" /></GridPane.margin>
            </VBox>

            <VBox
               alignment="CENTER"
               style="-fx-background-color: rgba(123,47,255,0.14);
                      -fx-background-radius: 10 10 0 0;
                      -fx-border-color: rgba(123,47,255,0.5) rgba(123,47,255,0.5) transparent rgba(123,47,255,0.5);
                      -fx-border-width: 2;"
               GridPane.columnIndex="1"
               GridPane.halignment="CENTER">
               <padding><Insets top="10.0" bottom="10.0" /></padding>
               <Label
                  text="B"
                  style="-fx-font-family: 'Courier New';
                         -fx-font-size: 44px;
                         -fx-font-weight: bold;
                         -fx-text-fill: #9B5FFF;
                         -fx-effect: dropshadow(gaussian, #7B2FFF, 10, 0.5, 0, 0);">
                  <font><Font size="44.0" /></font>
               </Label>
            </VBox>

            <VBox
               alignment="CENTER"
               style="-fx-background-color: rgba(0,200,120,0.12);
                      -fx-background-radius: 10 10 0 0;
                      -fx-border-color: rgba(0,200,120,0.45) rgba(0,200,120,0.45) transparent rgba(0,200,120,0.45);
                      -fx-border-width: 2;"
               GridPane.columnIndex="2"
               GridPane.halignment="CENTER">
               <padding><Insets top="10.0" bottom="10.0" /></padding>
               <Label
                  text="C"
                  style="-fx-font-family: 'Courier New';
                         -fx-font-size: 44px;
                         -fx-font-weight: bold;
                         -fx-text-fill: #00C878;
                         -fx-effect: dropshadow(gaussian, #00C878, 10, 0.5, 0, 0);">
                  <font><Font size="44.0" /></font>
               </Label>
            </VBox>

            <!-- ── Answer text row ── -->
            <VBox
               alignment="TOP_CENTER"
               style="-fx-background-color: rgba(0,60,120,0.25);
                      -fx-border-color: rgba(0,200,255,0.4) rgba(0,200,255,0.4) rgba(0,200,255,0.4) rgba(0,200,255,0.4);
                      -fx-border-width: 2;
                      -fx-border-radius: 0 0 12 12;
                      -fx-background-radius: 0 0 12 12;"
               GridPane.rowIndex="1"
               GridPane.halignment="CENTER"
               GridPane.valignment="TOP">
               <padding><Insets top="18.0" bottom="18.0" left="12.0" right="12.0" /></padding>
               <Label
                  fx:id="lblAntwort1"
                  text="Antwort 1"
                  wrapText="true"
                  textAlignment="CENTER"
                  style="-fx-font-family: 'Courier New';
                         -fx-font-size: 38px;
                         -fx-text-fill: white;
                         -fx-text-alignment: center;">
                  <font><Font size="38.0" /></font>
               </Label>
            </VBox>

            <VBox
               alignment="TOP_CENTER"
               style="-fx-background-color: rgba(60,20,120,0.28);
                      -fx-border-color: rgba(123,47,255,0.5) rgba(123,47,255,0.5) rgba(123,47,255,0.5) rgba(123,47,255,0.5);
                      -fx-border-width: 2;
                      -fx-border-radius: 0 0 12 12;
                      -fx-background-radius: 0 0 12 12;"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"
               GridPane.halignment="CENTER"
               GridPane.valignment="TOP">
               <padding><Insets top="18.0" bottom="18.0" left="12.0" right="12.0" /></padding>
               <Label
                  fx:id="lblAntwort2"
                  text="Antwort 2"
                  wrapText="true"
                  textAlignment="CENTER"
                  style="-fx-font-family: 'Courier New';
                         -fx-font-size: 38px;
                         -fx-text-fill: white;
                         -fx-text-alignment: center;">
                  <font><Font size="38.0" /></font>
               </Label>
            </VBox>

            <VBox
               alignment="TOP_CENTER"
               style="-fx-background-color: rgba(0,60,40,0.25);
                      -fx-border-color: rgba(0,200,120,0.45) rgba(0,200,120,0.45) rgba(0,200,120,0.45) rgba(0,200,120,0.45);
                      -fx-border-width: 2;
                      -fx-border-radius: 0 0 12 12;
                      -fx-background-radius: 0 0 12 12;"
               GridPane.columnIndex="2"
               GridPane.rowIndex="1"
               GridPane.halignment="CENTER"
               GridPane.valignment="TOP">
               <padding><Insets top="18.0" bottom="18.0" left="12.0" right="12.0" /></padding>
               <Label
                  fx:id="lblAntwort3"
                  text="Antwort 3"
                  wrapText="true"
                  textAlignment="CENTER"
                  style="-fx-font-family: 'Courier New';
                         -fx-font-size: 38px;
                         -fx-text-fill: white;
                         -fx-text-alignment: center;">
                  <font><Font size="38.0" /></font>
               </Label>
            </VBox>

         </children>
      </GridPane>
   </center>

</BorderPane>
