<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<!--
    QuestionView.fxml – legacy view (not used in 2025+ flow).
    QuestionView2025.fxml is the active question screen.
-->
<BorderPane
    id="pane"
    prefHeight="794.0" prefWidth="1102.0"
    style="-fx-background-color: #12121e;"
    stylesheets="@../application/buzzerStyle2025.css"
    xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="view.QuestionViewController">

    <top>
        <AnchorPane style="-fx-padding: 20 40 10 40;">
            <children>
                <Label
                    fx:id="lblFrage"
                    id="lblFrage"
                    alignment="CENTER"
                    textAlignment="CENTER"
                    wrapText="true"
                    text="Frage wird geladen…"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="100.0"
                    AnchorPane.topAnchor="30.0">
                    <font><Font size="44.0" /></font>
                </Label>
                <Label
                    fx:id="lblRestzeit"
                    id="lblZeit"
                    text="–"
                    AnchorPane.bottomAnchor="10.0"
                    AnchorPane.rightAnchor="10.0"
                    AnchorPane.topAnchor="200.0">
                    <font><Font name="System Bold" size="72.0" /></font>
                </Label>
            </children>
        </AnchorPane>
    </top>

    <center>
        <GridPane BorderPane.alignment="CENTER" hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints fillHeight="false" maxHeight="-Infinity" minHeight="10.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <padding><Insets bottom="20.0" left="30.0" right="30.0" top="10.0" /></padding>
            <children>
                <Label text="A:" GridPane.halignment="CENTER" GridPane.valignment="CENTER"
                       style="-fx-text-fill: #7070bb; -fx-font-size: 44pt; -fx-font-weight: bold;">
                    <GridPane.margin><Insets bottom="16.0" /></GridPane.margin>
                </Label>
                <Label text="B:" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"
                       style="-fx-text-fill: #7070bb; -fx-font-size: 44pt; -fx-font-weight: bold;">
                    <GridPane.margin><Insets bottom="16.0" /></GridPane.margin>
                </Label>
                <Label text="C:" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER"
                       style="-fx-text-fill: #7070bb; -fx-font-size: 44pt; -fx-font-weight: bold;">
                    <GridPane.margin><Insets bottom="16.0" /></GridPane.margin>
                </Label>
                <Label fx:id="lblAntwort1" text="Antwort 1" wrapText="true"
                       GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP"
                       style="-fx-text-fill: #eceeff; -fx-font-size: 40pt; -fx-font-weight: bold;">
                    <font><Font size="44.0" /></font>
                    <padding><Insets bottom="5.0" left="5.0" right="5.0" top="5.0" /></padding>
                </Label>
                <Label fx:id="lblAntwort2" text="Antwort 2" wrapText="true"
                       GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP"
                       style="-fx-text-fill: #eceeff; -fx-font-size: 40pt; -fx-font-weight: bold;">
                    <font><Font size="44.0" /></font>
                    <padding><Insets bottom="5.0" left="5.0" right="5.0" top="5.0" /></padding>
                </Label>
                <Label fx:id="lblAntwort3" text="Antwort 3" wrapText="true"
                       GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP"
                       style="-fx-text-fill: #eceeff; -fx-font-size: 40pt; -fx-font-weight: bold;">
                    <font><Font size="44.0" /></font>
                    <padding><Insets bottom="5.0" left="5.0" right="5.0" top="5.0" /></padding>
                </Label>
            </children>
        </GridPane>
    </center>

</BorderPane>
