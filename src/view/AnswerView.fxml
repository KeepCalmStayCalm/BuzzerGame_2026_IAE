<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    id="wiss_pane"
    maxHeight="1080.0" maxWidth="1920.0"
    minHeight="1080.0" minWidth="1920.0"
    prefHeight="1080.0" prefWidth="1920.0"
    styleClass="zwischenstand"
    stylesheets="@../application/buzzerStyle2025.css"
    xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="view.AnswerViewController">

    <!-- ── Top header ──────────────────────────────────────── -->
    <top>
        <AnchorPane prefHeight="220.0"
                    style="-fx-background-color: rgba(8,8,20,0.50);">
            <children>
                <!-- Logo -->
                <HBox alignment="CENTER_LEFT" spacing="18.0"
                      layoutX="50.0" layoutY="30.0">
                    <children>
                        <ImageView fitWidth="90.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../resources/images/IAE_Logo_S.png" />
                            </image>
                        </ImageView>
                        <Label id="lblBildenZukunft" text="#IAE_Future_Skills" />
                    </children>
                </HBox>

                <!-- Screen title -->
                <Label
                    id="lblTitle"
                    alignment="CENTER"
                    text="Zwischenstand"
                    AnchorPane.leftAnchor="100.0"
                    AnchorPane.rightAnchor="100.0"
                    AnchorPane.topAnchor="115.0" />
            </children>
        </AnchorPane>
    </top>

    <!-- ── Centre — score table + correct answer ───────────── -->
    <center>
        <VBox alignment="CENTER" spacing="40.0"
              BorderPane.alignment="CENTER">
            <padding><Insets left="160.0" right="160.0" /></padding>

            <!-- ── Score table ─────────────────────────────── -->
            <VBox spacing="0.0"
                  style="-fx-background-color: rgba(16,16,38,0.80);
                         -fx-border-color: #33335a;
                         -fx-border-width: 1.5px;
                         -fx-border-radius: 16px;
                         -fx-background-radius: 16px;">

                <!-- Column headers -->
                <GridPane hgap="20.0"
                          style="-fx-background-color: rgba(30,30,60,0.70);
                                 -fx-background-radius: 14px 14px 0 0;
                                 -fx-padding: 14 30 14 30;">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT"  hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="160.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="160.0" />
                    </columnConstraints>
                    <children>
                        <Label id="lblZwischenstandHeader" text="Spieler"          GridPane.columnIndex="0" />
                        <Label id="lblZwischenstandHeader" text="Rundenpunkte"     GridPane.columnIndex="1" />
                        <Label id="lblZwischenstandHeader" text="Gesamtpunkte"     GridPane.columnIndex="2" />
                    </children>
                </GridPane>

                <Separator style="-fx-opacity: 0.30;" />

                <!-- Player rows -->
                <GridPane hgap="20.0" vgap="0.0"
                          style="-fx-padding: 0 30 0 30;">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT"  hgrow="ALWAYS"    minWidth="10.0" prefWidth="200.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="160.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="160.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="78.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="78.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="78.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <!-- Spieler 1 -->
                        <Label fx:id="lblS1Name"          styleClass="score-cell"     text="–" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="lblS1PunkteDazu"    styleClass="score-positive"  text="–" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label fx:id="lblS1PunkteGesamt"  styleClass="score-cell"     text="–" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <!-- Spieler 2 -->
                        <Label fx:id="lblS2Name"          styleClass="score-cell"     text="–" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="lblS2PunkteDazu"    styleClass="score-positive"  text="–" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="lblS2PunkteGesamt"  styleClass="score-cell"     text="–" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <!-- Spieler 3 -->
                        <Label fx:id="lblS3Name"          styleClass="score-cell"     text="–" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="lblS3PunkteDazu"    styleClass="score-positive"  text="–" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label fx:id="lblS3PunkteGesamt"  styleClass="score-cell"     text="–" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    </children>
                </GridPane>

            </VBox>

            <!-- ── Correct answer reveal ───────────────────── -->
            <VBox alignment="CENTER" spacing="12.0"
                  style="-fx-background-color: rgba(16,16,38,0.80);
                         -fx-border-color: #33335a;
                         -fx-border-width: 1.5px;
                         -fx-border-radius: 14px;
                         -fx-background-radius: 14px;
                         -fx-padding: 24 40 24 40;">
                <children>
                    <Label
                        text="Die richtige Antwort war:"
                        style="-fx-text-fill: #66667a; -fx-font-size: 20pt; -fx-font-weight: normal;" />
                    <Label
                        fx:id="lblAntwort"
                        id="lblAntwort"
                        text="…"
                        textAlignment="CENTER"
                        wrapText="true" />
                </children>
            </VBox>

        </VBox>
    </center>

</BorderPane>
