<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    id="wiss_pane"
    maxHeight="1080.0" maxWidth="1920.0"
    minHeight="1080.0" minWidth="1920.0"
    prefHeight="1080.0" prefWidth="1920.0"
    stylesheets="@../application/buzzerStyle2025.css"
    xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="view.LobbyViewController">

    <!-- ── Top header bar ──────────────────────────────────── -->
    <top>
        <AnchorPane prefHeight="220.0">
            <children>
                <!-- Logo + tag -->
                <HBox alignment="CENTER_LEFT" spacing="18.0"
                      layoutX="50.0" layoutY="32.0">
                    <children>
                        <ImageView fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../resources/images/IAE_Logo_S.png" />
                            </image>
                        </ImageView>
                        <Label id="lblBildenZukunft" text="#IAE_Future_Skills" />
                    </children>
                </HBox>

                <!-- Screen title -->
                <Label
                    id="lblTitle"
                    alignment="CENTER"
                    text="Spieler verbinden"
                    AnchorPane.leftAnchor="80.0"
                    AnchorPane.rightAnchor="80.0"
                    AnchorPane.topAnchor="110.0" />
            </children>
        </AnchorPane>
    </top>

    <!-- ── Centre — three player slots ────────────────────── -->
    <center>
        <GridPane alignment="CENTER" hgap="40.0"
                  BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            </rowConstraints>
            <padding><Insets left="60.0" right="60.0" /></padding>

            <children>

                <!-- Player 1 -->
                <VBox alignment="CENTER" spacing="20.0"
                      styleClass="player-card"
                      GridPane.columnIndex="0">
                    <padding><Insets bottom="36.0" left="20.0" right="20.0" top="36.0" /></padding>
                    <children>
                        <Label
                            text="SPIELER 1"
                            style="-fx-text-fill: #8b949e; -fx-font-size: 18pt; -fx-font-weight: bold; -fx-letter-spacing: 2;" />
                        <ImageView
                            fx:id="avatar1"
                            fitHeight="360.0" fitWidth="360.0"
                            pickOnBounds="true" preserveRatio="true" />
                        <Separator style="-fx-opacity: 0.25;" />
                        <Label
                            fx:id="lblReady1"
                            opacity="0.0"
                            text="✓  BEREIT"
                            style="-fx-text-fill: #3fb950; -fx-font-size: 36pt; -fx-font-weight: bold;" />
                        <Label
                            text="Buzzer drücken"
                            style="-fx-text-fill: #6e7681; -fx-font-size: 18pt; -fx-font-weight: normal;" />
                    </children>
                </VBox>

                <!-- Player 2 -->
                <VBox alignment="CENTER" spacing="20.0"
                      styleClass="player-card"
                      GridPane.columnIndex="1">
                    <padding><Insets bottom="36.0" left="20.0" right="20.0" top="36.0" /></padding>
                    <children>
                        <Label
                            text="SPIELER 2"
                            style="-fx-text-fill: #8b949e; -fx-font-size: 18pt; -fx-font-weight: bold; -fx-letter-spacing: 2;" />
                        <ImageView
                            fx:id="avatar2"
                            fitHeight="360.0" fitWidth="360.0"
                            pickOnBounds="true" preserveRatio="true" />
                        <Separator style="-fx-opacity: 0.25;" />
                        <Label
                            fx:id="lblReady2"
                            opacity="0.0"
                            text="✓  BEREIT"
                            style="-fx-text-fill: #3fb950; -fx-font-size: 36pt; -fx-font-weight: bold;" />
                        <Label
                            text="Buzzer drücken"
                            style="-fx-text-fill: #6e7681; -fx-font-size: 18pt; -fx-font-weight: normal;" />
                    </children>
                </VBox>

                <!-- Player 3 -->
                <VBox alignment="CENTER" spacing="20.0"
                      styleClass="player-card"
                      GridPane.columnIndex="2">
                    <padding><Insets bottom="36.0" left="20.0" right="20.0" top="36.0" /></padding>
                    <children>
                        <Label
                            text="SPIELER 3"
                            style="-fx-text-fill: #8b949e; -fx-font-size: 18pt; -fx-font-weight: bold; -fx-letter-spacing: 2;" />
                        <ImageView
                            fx:id="avatar3"
                            fitHeight="360.0" fitWidth="360.0"
                            pickOnBounds="true" preserveRatio="true" />
                        <Separator style="-fx-opacity: 0.25;" />
                        <Label
                            fx:id="lblReady3"
                            opacity="0.0"
                            text="✓  BEREIT"
                            style="-fx-text-fill: #3fb950; -fx-font-size: 36pt; -fx-font-weight: bold;" />
                        <Label
                            text="Buzzer drücken"
                            style="-fx-text-fill: #6e7681; -fx-font-size: 18pt; -fx-font-weight: normal;" />
                    </children>
                </VBox>

            </children>
        </GridPane>
    </center>

    <!-- ── Bottom — start button ────────────────────────────── -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="180.0"
              BorderPane.alignment="CENTER">
            <children>
                <Button
                    onAction="#btnQuestionPressed"
                    prefHeight="100.0" prefWidth="500.0"
                    styleClass="btn-primary"
                    text="▶  LOS GEHT'S!" />
            </children>
            <padding><Insets bottom="55.0" /></padding>
        </HBox>
    </bottom>

</BorderPane>
