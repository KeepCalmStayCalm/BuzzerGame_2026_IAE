<BorderPane id="wiss_pane" maxHeight="1080.0" maxWidth="1920.0" minHeight="1080.0" minWidth="1920.0" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../application/buzzerStyle2025.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LobbyViewController">
   <top>
      <AnchorPane prefHeight="250.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="lblTitle" alignment="CENTER" text="Aktiviere deinen Buzzer" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0" AnchorPane.topAnchor="100.0" />
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" spacing="10.0">
               <children>
                  <ImageView fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/IAE%20Logo%20-%20S.png" />
                     </image>
                  </ImageView>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label id="lblBildenZukunft" text="#IAE_Future_Skills" textFill="#575555" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </top>
   <center>
      <GridPane alignment="CENTER" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="0">
               <children>
                  <ImageView fx:id="avatar1" fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="lblReady1" styleClass="label_bigger" text="READY" visible="false" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="1">
               <children>
                  <ImageView fx:id="avatar2" fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="lblReady2" styleClass="label_bigger" text="READY" visible="false" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="20.0" GridPane.columnIndex="2">
               <children>
                  <ImageView fx:id="avatar3" fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="lblReady3" styleClass="label_bigger" text="READY" visible="false" />
               </children>
            </VBox>
         </children>
      </GridPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="150.0" BorderPane.alignment="CENTER">
         <children>
            <Button onAction="#btnQuestionPressed" prefWidth="400.0" style="-fx-font-weight: bold;" text="Los geht's">
               <font><Font size="36.0" /></font>
            </Button>
         </children>
         <padding><Insets bottom="50.0" /></padding>
      </HBox>
   </bottom>
</BorderPane>
