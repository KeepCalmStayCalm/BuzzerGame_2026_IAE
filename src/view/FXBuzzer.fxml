<BorderPane
   prefHeight="260.0"
   prefWidth="340.0"
   style="-fx-background-color: #0A0E1A;
          -fx-border-color: rgba(0,200,255,0.30);
          -fx-border-width: 2;"
   xmlns="http://javafx.com/javafx/11.0.1"
   xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="view.FXBuzzerController">

   <!-- Top accent bar -->
   <top>
      <VBox style="-fx-background-color: #0D1220;">
         <Rectangle
            height="3.0" width="340.0"
            fill="linear-gradient(to right, #7B2FFF, #00C8FF, #7B2FFF)" />
         <Label
            text="ðŸŽ®  SPIELER BUZZER"
            alignment="CENTER"
            style="-fx-font-family: 'Courier New';
                   -fx-font-size: 13px;
                   -fx-font-weight: bold;
                   -fx-text-fill: #00C8FF;
                   -fx-letter-spacing: 2px;
                   -fx-padding: 8 0 8 0;">
            <BorderPane.margin><Insets top="0.0" /></BorderPane.margin>
         </Label>
         <Rectangle
            height="1.0" width="340.0"
            fill="linear-gradient(to right, transparent, rgba(0,200,255,0.3), transparent)" />
      </VBox>
   </top>

   <!-- Buzzer buttons -->
   <center>
      <HBox
         alignment="CENTER"
         spacing="14.0"
         style="-fx-background-color: #0A0E1A;">
         <padding><Insets top="22.0" bottom="22.0" left="20.0" right="20.0" /></padding>

         <!-- Buzzer 1 â€“ Blue -->
         <VBox alignment="CENTER" spacing="6.0">
            <Button
               mnemonicParsing="false"
               onAction="#b1Pressed"
               text="A"
               prefWidth="80.0"
               prefHeight="80.0"
               style="-fx-background-radius: 50%;
                      -fx-border-radius: 50%;
                      -fx-border-color: #00C8FF;
                      -fx-border-width: 3;
                      -fx-background-color: radial-gradient(center 35% 35%, radius 65%, #006080, #002540);
                      -fx-text-fill: #00C8FF;
                      -fx-font-family: 'Courier New';
                      -fx-font-size: 32px;
                      -fx-font-weight: bold;
                      -fx-cursor: hand;
                      -fx-effect: dropshadow(gaussian, #00C8FF, 18, 0.4, 0, 0);" />
            <Label
               text="BUZZER 1"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 11px;
                      -fx-text-fill: #00C8FF;
                      -fx-font-weight: bold;" />
         </VBox>

         <!-- Buzzer 2 â€“ Purple -->
         <VBox alignment="CENTER" spacing="6.0">
            <Button
               mnemonicParsing="false"
               onAction="#b2Pressed"
               text="B"
               prefWidth="80.0"
               prefHeight="80.0"
               style="-fx-background-radius: 50%;
                      -fx-border-radius: 50%;
                      -fx-border-color: #7B2FFF;
                      -fx-border-width: 3;
                      -fx-background-color: radial-gradient(center 35% 35%, radius 65%, #4A1090, #200050);
                      -fx-text-fill: #9B5FFF;
                      -fx-font-family: 'Courier New';
                      -fx-font-size: 32px;
                      -fx-font-weight: bold;
                      -fx-cursor: hand;
                      -fx-effect: dropshadow(gaussian, #7B2FFF, 18, 0.4, 0, 0);" />
            <Label
               text="BUZZER 2"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 11px;
                      -fx-text-fill: #9B5FFF;
                      -fx-font-weight: bold;" />
         </VBox>

         <!-- Buzzer 3 â€“ Green -->
         <VBox alignment="CENTER" spacing="6.0">
            <Button
               mnemonicParsing="false"
               onAction="#b3Pressed"
               text="C"
               prefWidth="80.0"
               prefHeight="80.0"
               style="-fx-background-radius: 50%;
                      -fx-border-radius: 50%;
                      -fx-border-color: #00C878;
                      -fx-border-width: 3;
                      -fx-background-color: radial-gradient(center 35% 35%, radius 65%, #006040, #002518);
                      -fx-text-fill: #00C878;
                      -fx-font-family: 'Courier New';
                      -fx-font-size: 32px;
                      -fx-font-weight: bold;
                      -fx-cursor: hand;
                      -fx-effect: dropshadow(gaussian, #00C878, 18, 0.4, 0, 0);" />
            <Label
               text="BUZZER 3"
               style="-fx-font-family: 'Courier New';
                      -fx-font-size: 11px;
                      -fx-text-fill: #00C878;
                      -fx-font-weight: bold;" />
         </VBox>
      </HBox>
   </center>

   <!-- Score display -->
   <bottom>
      <VBox
         alignment="CENTER"
         style="-fx-background-color: rgba(0,200,255,0.05);
                -fx-border-color: rgba(0,200,255,0.20) transparent transparent transparent;
                -fx-border-width: 1 0 0 0;">
         <padding><Insets top="10.0" bottom="12.0" /></padding>
         <Label
            text="PUNKTE"
            style="-fx-font-family: 'Courier New';
                   -fx-font-size: 11px;
                   -fx-text-fill: #3A5A70;
                   -fx-letter-spacing: 2px;" />
         <Label
            fx:id="lblPunkte"
            text="0"
            alignment="CENTER"
            style="-fx-font-family: 'Courier New';
                   -fx-font-size: 30px;
                   -fx-font-weight: bold;
                   -fx-text-fill: #FFD700;
                   -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.4), 10, 0.3, 0, 0);" />
      </VBox>
   </bottom>

</BorderPane>
