<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="iae_pane" fx:id="imageRoot" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@../application/buzzerStyle2025.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.StartupViewController">
   <top>
      <AnchorPane prefHeight="250.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="lblTitle" alignment="CENTER" layoutX="60.0" layoutY="130.0" stylesheets="@../application/buzzerStyle2025.css" text="IAE Buzzer Challenge 2026" textAlignment="CENTER" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0" />
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0">
               <children>
                  <ImageView fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/images/IAE%20Logo%20-%20S.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </top>
   <center>
      <ImageView fx:id="wissHome" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../resources/images/IAE%20-%20BG%20-%20V3.png" />
         </image>
      </ImageView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="150.0">
         <children>
            <Button onAction="#btnSettingsPressed" text="Einstellungen" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnPlay" onAction="#btnLobbyPressed" text="Spiel starten" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
