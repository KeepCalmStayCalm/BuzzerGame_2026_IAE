<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<BorderPane
    id="wiss_pane"
    fx:id="imageRoot"
    maxHeight="1080.0" maxWidth="1920.0"
    minHeight="1080.0" minWidth="1920.0"
    prefHeight="1080.0" prefWidth="1920.0"
    stylesheets="@../application/buzzerStyle2025.css"
    xmlns="http://javafx.com/javafx/24.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="view.StartupViewController">

    <!-- ── Top header bar ──────────────────────────────────── -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="18.0"
              style="-fx-padding: 32 50 0 50;">
            <children>
                <ImageView fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../resources/images/IAE_Logo_S.png" />
                    </image>
                </ImageView>
                <Label id="lblBildenZukunft" text="#IAE_Future_Skills" />
            </children>
        </HBox>
    </top>

    <!-- ── Centre hero area ────────────────────────────────── -->
    <center>
        <VBox alignment="CENTER" spacing="28.0">

            <!-- Title -->
            <Label id="lblTitle"
                   alignment="CENTER"
                   text="IAE – Wie fit bist du für die IT?"
                   wrapText="true"
                   style="-fx-text-alignment: center;" />

            <!-- Thin divider -->
            <Separator
                style="-fx-pref-width: 600; -fx-opacity: 0.35;"
                maxWidth="680.0" />

            <!-- Subtitle / flavour text -->
            <Label
                text="Quiz · Buzzer · 3 Spieler"
                style="-fx-text-fill: #8b949e; -fx-font-size: 24pt; -fx-font-weight: normal;" />

            <!-- Centre image (controller-managed) -->
            <AnchorPane fx:id="centerPane" prefHeight="320.0" prefWidth="900.0">
                <children>
                    <ImageView
                        fx:id="wissHome"
                        pickOnBounds="true"
                        preserveRatio="true"
                        AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0" />
                </children>
            </AnchorPane>

            <VBox.margin><Insets left="120.0" right="120.0" /></VBox.margin>
        </VBox>
    </center>

    <!-- ── Bottom action buttons ───────────────────────────── -->
    <bottom>
        <HBox alignment="CENTER" spacing="60.0"
              style="-fx-padding: 0 0 70 0;">
            <children>
                <Button
                    mnemonicParsing="false"
                    onAction="#btnSettingsPressed"
                    prefHeight="90.0" prefWidth="400.0"
                    styleClass="btn-secondary"
                    text="⚙  EINSTELLUNGEN" />

                <Button
                    fx:id="btnPlay"
                    mnemonicParsing="false"
                    onAction="#btnLobbyPressed"
                    prefHeight="110.0" prefWidth="520.0"
                    styleClass="btn-primary"
                    text="▶  JETZT STARTEN" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
